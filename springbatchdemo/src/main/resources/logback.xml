<?xml version="1.0" encoding="UTF-8"?>

<configuration>

	<property name="HOME_LOG" value="D:/Nayan/Logs/springrest/app.log"></property>

	<appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">
			<Pattern>
				%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n
			</Pattern>
		</layout>
	</appender>

	<logger name="com.springtuts.springbatchdemo" level="info" additivity="false">
		<appender-ref ref="CONSOLE" />
	</logger>

	<root level="debug">
		<appender-ref ref="CONSOLE" />
	</root>

</configuration>